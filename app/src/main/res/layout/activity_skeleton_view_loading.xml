<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="?android:attr/colorButtonNormal"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/tv_knowledge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/colorButtonNormal"
        app:layout_constraintEnd_toStartOf="@id/tv_story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_banner" />

    <View
        android:id="@+id/tv_story"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/colorButtonNormal"
        app:layout_constraintEnd_toStartOf="@id/tv_service"
        app:layout_constraintStart_toEndOf="@id/tv_knowledge"
        app:layout_constraintTop_toTopOf="@id/tv_knowledge" />

    <View
        android:id="@+id/tv_service"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/colorButtonNormal"
        app:layout_constraintEnd_toStartOf="@id/tv_topic"
        app:layout_constraintStart_toEndOf="@id/tv_story"
        app:layout_constraintTop_toTopOf="@id/tv_knowledge" />

    <View
        android:id="@+id/tv_topic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/colorButtonNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_service"
        app:layout_constraintTop_toTopOf="@id/tv_knowledge" />

    <View
        android:id="@+id/tv_knowledge_2"
        android:layout_width="48dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/colorButtonNormal"
        app:layout_constraintEnd_toStartOf="@id/tv_story_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_knowledge" />

    <View
        android:id="@+id/tv_story_2"
        android:layout_width="48dp"
        android:layout_height="12dp"
        android:background="?android:attr/colorButtonNormal"
        app:layout_constraintEnd_toStartOf="@id/tv_service_2"
        app:layout_constraintStart_toEndOf="@id/tv_knowledge_2"
        app:layout_constraintTop_toTopOf="@id/tv_knowledge_2" />

    <View
        android:id="@+id/tv_service_2"
        android:layout_width="48dp"
        android:layout_height="12dp"
        android:background="?android:attr/colorButtonNormal"
        app:layout_constraintEnd_toStartOf="@id/tv_topic_2"
        app:layout_constraintStart_toEndOf="@id/tv_story_2"
        app:layout_constraintTop_toTopOf="@id/tv_knowledge_2" />

    <View
        android:id="@+id/tv_topic_2"
        android:layout_width="48dp"
        android:layout_height="12dp"
        android:background="?android:attr/colorButtonNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_service_2"
        app:layout_constraintTop_toTopOf="@id/tv_knowledge_2" />
</androidx.constraintlayout.widget.ConstraintLayout>