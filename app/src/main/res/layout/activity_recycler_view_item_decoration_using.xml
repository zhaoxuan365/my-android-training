<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearLayout 竖直方向"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearLayout 水平方向"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_vertical" />

    <Button
        android:id="@+id/btn_grid_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridLayout 竖直方向"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_horizontal" />

    <Button
        android:id="@+id/btn_grid_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridLayout 水平方向"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_grid_vertical" />

    <Button
        android:id="@+id/btn_stagger_grid_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StaggeredGridLayout 竖直方向"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_grid_horizontal" />

    <Button
        android:id="@+id/btn_stagger_grid_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StaggeredGridLayout 水平方向"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_stagger_grid_vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>