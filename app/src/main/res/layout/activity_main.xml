<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".activity.MainActivity">


        <TextView
            android:id="@+id/skeleton_screen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed_ripple_bg"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="Shimmer Skeleton (骨架屏的使用)"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_replacer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/pressed_ripple_bg"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="ViewReplacer的使用"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skeleton_screen" />

        <TextView
            android:id="@+id/constraint_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/pressed_ripple_bg"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="ConstraintLayout的使用"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_replacer" />

        <TextView
            android:id="@+id/ripple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/pressed_ripple_bg"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="Ripple Effect"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout" />

        <TextView
            android:id="@+id/recycler_view_no_perception_load_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/pressed_ripple_bg"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="RecyclerView预加载(无感知自动加载更多)"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ripple" />

        <TextView
            android:id="@+id/coordinator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/pressed_ripple_bg"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="CoordinatorLayout使用"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_no_perception_load_more" />

        <TextView
            android:id="@+id/recycler_view_linear_divider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/pressed_ripple_bg"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="recycler_view_linear_divider"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coordinator" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

